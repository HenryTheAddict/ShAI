# ShAI Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=true
PORT=5000

# AI Configuration
# Choose between Claude API (cloud) or Ollama (local)
USE_LOCAL=false

# Claude API Configuration (for cloud deployment)
# Get your API key from https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# Ollama Configuration (for local deployment)
# Make sure Ollama is running locally
OLLAMA_URL=http://localhost:11434

# Logging Level
LOG_LEVEL=INFO

# Production Settings (for Namecheap shared hosting)
# FLASK_ENV=production
# DEBUG=false

# Example usage:
# For local development with Ollama: USE_LOCAL=true
# For cloud deployment with Claude: USE_LOCAL=false and set CLAUDE_API_KEY
